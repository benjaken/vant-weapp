<demo-block>
  <van-list
    custom-style="max-height:{{windowHeight}}px"
    loading="{{loading}}"
		finished="{{finished}}"
    refresherEnabled="{{true}}"
    refresherDefaultStyle="black"
		refresherBackground="#fff"
    bind:scrolltolower="onReachBottom"
    bind:refresh="onRefresh"
  >
    <van-cell wx:for="{{list}}" wx:key="index" title="{{index + 1}}" />
  </van-list>
</demo-block>
