<van-cell-group inset>
  <van-cell title="弹出默认键盘" is-link data-id="keyboard1" bind:click="showKeyboard" />
  <van-cell title="弹出带右侧栏的键盘" is-link data-id="keyboard2" bind:click="showKeyboard" />
  <van-cell title="弹出身份证号键盘" is-link data-id="keyboard3" bind:click="showKeyboard" />
  <van-cell title="弹出带标题的键盘" is-link data-id="keyboard4" bind:click="showKeyboard" />
  <van-cell title="弹出配置多个按键的键盘" is-link data-id="keyboard5" bind:click="showKeyboard" />
  <van-cell title="弹出配置随机数字的键盘" is-link data-id="keyboard6" bind:click="showKeyboard" />
  <van-field label="与输入框绑定" placeholder="点此输入（最长长度为6）" value="{{value}}" readonly clickable data-id="keyboard7" bindtap="showKeyboard" />
</van-cell-group>

<van-number-keyboard
  show="{{keyboard1}}"
  bind:input="onInput"
  bind:delete="onDelete"
/>

<van-number-keyboard
  show="{{keyboard2}}"
  theme="custom"
  extra-key="."
  close-button-text="完成"
  bind:input="onInput"
  bind:delete="onDelete"
/>

<van-number-keyboard
  show="{{keyboard3}}"
  extra-key="X"
  close-button-text="完成"
  bind:input="onInput"
  bind:delete="onDelete"
/>

<van-number-keyboard
  show="{{keyboard4}}"
  title="键盘标题"
  extra-key="."
  close-button-text="完成"
  bind:input="onInput"
  bind:delete="onDelete"
/>

<van-number-keyboard
  show="{{keyboard5}}"
  theme="custom"
  extra-key="{{['00', '.']}}"
  close-button-text="完成"
  bind:input="onInput"
  bind:delete="onDelete"
/>

<van-number-keyboard
  show="{{keyboard6}}"
  random-key-order
  bind:input="onInput"
  bind:delete="onDelete"
/>

<van-number-keyboard
  show="{{keyboard7}}"
  maxlength="6"
  bind:input="onValueInput"
/>

<van-toast id="van-toast" />
