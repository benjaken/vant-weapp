<demo-block title="基础用法" padding>
  <van-slide-verify bind:success="onSuccess" bind:error="onError" />
</demo-block>

<demo-block title="拖动到底" padding>
  <van-slide-verify bottom placeholder="请拖动滑块到底" bind:success="onSuccess" bind:error="onError" />
</demo-block>

<demo-block title="自定义颜色" padding>
  <van-slide-verify active-color="#1989fa" bind:success="onSuccess" bind:error="onError" />
</demo-block>

<demo-block title="重置验证" padding>
  <van-slide-verify class="verify" bind:success="onSuccess" bind:error="onError" />
  <van-button custom-class="demo-button" block bind:click="reset">重置验证</van-button>
</demo-block>

<van-toast id="van-toast" />
