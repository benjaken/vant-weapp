.title {
  font-size: 40rpx;
  color: #323233;
  padding: 20rpx 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title .date {
  font-size: 28rpx;
  font-weight: normal;
}
.content {
  font-size: 28rpx;
  color: #969799;
  margin-bottom: 40rpx;
  padding: 20rpx 32rpx;
}

@media (prefers-color-scheme: dark) {
  .title {
    color: #f5f5f5;
  }
  .content {
    color: #707070;
  }
}